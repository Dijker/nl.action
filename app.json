{
    "id": "nl.action",
    "version": "1.0.15",
    "compatibility": "0.x || 1.x",
    "category": ["appliances", "lights"],
    "name": {
        "en": "Action",
		"nl": "Action"
    },
    "description": {
		"en": "Give Homey the ability to control your Action devices",
		"nl": "Laat Homey Action modules aansturen"
    },
    "author": {
        "name" : "Athom B.V."
    },
    "images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
    },
    "permissions": [
	    "homey:wireless:433"
    ],
    "flow": {
	    "actions": [
	        {
	            "id": "triggerDoorbell",
	            "title": {
	                "en": "Ring the doorbell",
	                "nl": "Laat de deurbel af gaan"
	            },
	            "args": [
	                {
	                    "name": "device",
	                    "type": "device",
	                    "filter": "driver_id=selectplus_doorbell",
	                    "placeholder": { "en": "Which doorbell?", "nl": "Welke deurbel?" }
	                }	                
            	]
	        }
	    ]	
	},
    "drivers": [
	    {
		    "id": "eurodomest",
		    "name": {
				"en": "Eurodomest socket",
			    "nl": "Eurodomest schakelaar"
		    },
		    "images": {
				"large": "./drivers/eurodomest/assets/images/large.png",
				"small": "./drivers/eurodomest/assets/images/small.png"
		    },
		    "class": "socket",
		    "capabilities": [ "onoff" ],
		    "pair": [
				{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate1",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitate1"
			    	}
			    },
				{
			    	"id": "generate1",
			    	"navigation": {
				    	"next": "generate2",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "generate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "generate1"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		},
	    {
		    "id": "impuls",
		    "name": {
				"en": "Impuls socket",
			    "nl": "Impuls stopcontact"
		    },
		    "images": {
				"large": "./drivers/impuls/assets/images/large.png",
				"small": "./drivers/impuls/assets/images/small.png"
		    },
		    "class": "socket",
		    "capabilities": [ "onoff" ],
		    "pair": [
		    	{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
				    	"prev": "imitate",
				    	"next": "choose_slave"
			    	}
			    },
				{
			    	"id": "configure",
			    	"navigation": {
						"next": "configure2",
						"prev": "start"
			    	}
			    },
			    {
			    	"id": "configure2",
			    	"navigation": {
						"prev": "configure",
						"next": "choose_slave"
			    	}
			    },
			    {
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
			    {
			    	"id": "done"
			    }
		    ]
		},
		{
		    "id": "promax",
		    "name": {
				"en": "Promax socket",
			    "nl": "Promax schakelaar"
		    },
		    "images": {
				"large": "./drivers/promax/assets/images/large.png",
				"small": "./drivers/promax/assets/images/small.png"
		    },
		    "class": "socket",
		    "capabilities": [ "onoff" ],
		    "pair": [
			    {
			    	"id": "imitateOn"
			    },
			    {
			    	"id": "imitateOff",
			    	"navigation": {
				    	"prev": "imitateOn"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitateOff"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		},
		{
		    "id": "selectplus_doorbell",
		    "name": {
				"en": "Doorbell",
			    "nl": "Deurbel"
		    },
		    "images": {
				"large": "./drivers/selectplus_doorbell/assets/images/large.png",
				"small": "./drivers/selectplus_doorbell/assets/images/small.png"
		    },
		    "class": "button",
		    "capabilities": [ "onoff" ],
		    "pair": [
			    {
			    	"id": "imitate1"
			    },
				{
			    	"id": "done"
			    }
		    ]
		}
    ]
}
